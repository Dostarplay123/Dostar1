    <h1>Открыть чат в WhatsApp</h1>
    <button id="openWhatsApp">Написать в WhatsApp</button>

    <script>
        document.getElementById("openWhatsApp").addEventListener("click", function () {
            // Замените "PHONE_NUMBER" на номер телефона в международном формате (без плюса)
            const phoneNumber = "77474705053"; // Пример: 79876543210
            const url = `https://api.whatsapp.com/send?phone=${phoneNumber}`;
            window.open(url, "_blank");
        });
    </script>
